<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor de Compra</th>
      <th>Quantidade</th>
      <th>Descrição</th>
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td>R$ <%= produto.valor_compra %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.descricao %></td>
        <td><%= image_submit_tag(produto.imagem) %></td>
        <td><%= link_to produto, class: "btn btn-default" do %> <i class="fa fa-eye"></i> <%end%></td>
        <td><%= link_to edit_produto_path(produto), class: "btn btn-primary" do %> <i class="fa fa-pencil-square-o"></i> <%end%></td>
        <td><%= link_to produto, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: "btn btn-danger" do %> <i class="glyphicon glyphicon-remove-circle"></i> <%end%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_produto_path, class: "btn btn-success" do %> <i class="fa fa-plus-circle"></i> Novo Produto <%end%>
