<%= bootstrap_form_for(produto, inline_errors: false) do |f| %>
  <%= f.text_field :nome %>
  <%= f.text_field :valor_compra, prepend: "R$:", label: "Valor de compra" %>
  <%= f.text_area :descricao, label: "Descrição" %>
  <%= f.text_field :imagem, help: "Para ter uma melhor resolução, utilize imagens de até 100px quadrado, no formato .jpg" %>
  <%= button_tag( :class => "btn btn-info") do %>
    <i class="fa fa-download"></i> Salvar
  <% end %>
  <%= link_to produtos_path, class: "btn btn-primary" do %> <i class="fa fa-reply"></i> Voltar <%end%>
<% end %>
