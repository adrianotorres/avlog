<p id="notice"><%= notice %></p>

<h1>Setores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @setores.each do |setor| %>
      <tr>
        <td><%= setor.nome %></td>
        <td><%= setor.sigla %></td>
        <td><%= link_to setor, class: "btn btn-default" do %> <i class="fa fa-eye"></i> <%end%></td>
        <td><%= link_to edit_setor_path(setor), class: "btn btn-primary" do %> <i class="fa fa-pencil-square-o"></i> <%end%></td>
        <td><%= link_to setor, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: "btn btn-danger" do %> <i class="glyphicon glyphicon-remove-circle"></i> <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_setor_path, class: "btn btn-success" do %> <i class="fa fa-plus-circle"></i> Novo Setor <%end%>
